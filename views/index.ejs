<style>
    :root {
        --dark-green: #1b4332;
        --medium-green: #2d6a4f;
        --light-green: #40916c;
        --gold: #d4af37;
        --light-gold: #f4e5a1;
    }
    
    .hero-section {
        background: linear-gradient(135deg, var(--dark-green) 0%, var(--medium-green) 100%);
        color: white;
        padding: 5rem 0;
        border-radius: 0 0 30px 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    .hero-section h1 {
        font-weight: 800;
        font-size: 2.75rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }
    
    .hero-section .lead {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.95);
        margin-bottom: 2rem;
    }
    
    .btn-hero-primary {
        background: var(--gold);
        color: var(--dark-green);
        border: none;
        padding: 0.85rem 2rem;
        font-weight: 700;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
    }
    
    .btn-hero-primary:hover {
        background: #c99d2d;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
        color: var(--dark-green);
    }
    
    .btn-hero-secondary {
        background: transparent;
        color: white;
        border: 2px solid white;
        padding: 0.85rem 2rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn-hero-secondary:hover {
        background: white;
        color: var(--dark-green);
        transform: translateY(-2px);
    }
    
    .btn-hero-success {
        background: var(--gold);
        color: var(--dark-green);
        border: none;
        padding: 0.85rem 2.5rem;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
    }
    
    .btn-hero-success:hover {
        background: #c99d2d;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
        color: var(--dark-green);
    }
    
    .features-section {
        padding: 4rem 0;
    }
    
    .feature-card {
        border: none;
        border-radius: 15px;
        height: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    }
    
    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 30px rgba(27, 67, 50, 0.15);
    }
    
    .feature-card .card-body {
        padding: 2.5rem 1.5rem;
    }
    
    .feature-card i {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }
    
    .feature-card.shield i {
        color: var(--dark-green);
    }
    
    .feature-card.boxes i {
        color: var(--gold);
    }
    
    .feature-card.chart i {
        color: var(--light-green);
    }
    
    .feature-card h5 {
        color: var(--dark-green);
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }
    
    .feature-card p {
        color: #6c757d;
        font-size: 0.95rem;
        line-height: 1.6;
    }
    
    .cta-section {
        padding: 3rem 0;
    }
    
    .cta-card {
        background: linear-gradient(135deg, var(--dark-green) 0%, var(--medium-green) 100%);
        border: none;
        border-radius: 20px;
        color: white;
        box-shadow: 0 6px 30px rgba(27, 67, 50, 0.2);
    }
    
    .cta-card .card-body {
        padding: 3.5rem 2rem;
    }
    
    .cta-card h3 {
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .cta-card .lead {
        font-size: 1.15rem;
        margin-bottom: 2rem;
        color: rgba(255, 255, 255, 0.95);
    }
    
    .btn-cta {
        background: var(--gold);
        color: var(--dark-green);
        border: none;
        padding: 0.85rem 2.5rem;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
    }
    
    .btn-cta:hover {
        background: #c99d2d;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
        color: var(--dark-green);
    }
    
    @media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2rem;
        }
        
        .hero-section .lead {
            font-size: 1rem;
        }
        
        .btn-hero-primary,
        .btn-hero-secondary {
            padding: 0.75rem 1.5rem;
            font-size: 0.95rem;
        }
    }
</style>

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4">Welcome to Inventory Management System</h1>
        <p class="lead">Efficiently manage your inventory with role-based access control</p>
        
        <% if (!user) { %>
            <div class="mt-4">
                <a href="/login" class="btn btn-hero-primary btn-lg me-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
                <a href="#features" class="btn btn-hero-secondary btn-lg">
                    <i class="fas fa-info-circle me-2"></i>Learn More
                </a>
            </div>
        <% } else { %>
            <div class="mt-4">
                <a href="/dashboard" class="btn btn-hero-success btn-lg">
                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                </a>
            </div>
        <% } %>
    </div>
</div>

<div class="features-section">
    <div class="container">
        <div id="features" class="row">
            <div class="col-md-4 mb-4">
                <div class="card feature-card shield text-center">
                    <div class="card-body">
                        <i class="fas fa-shield-alt"></i>
                        <h5>Role-Based Access</h5>
                        <p>Different permissions for Admin, Manager, and Staff roles to ensure secure and organized operations</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card feature-card boxes text-center">
                    <div class="card-body">
                        <i class="fas fa-boxes"></i>
                        <h5>Inventory Management</h5>
                        <p>Track and manage your products efficiently with comprehensive inventory control tools</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card feature-card chart text-center">
                    <div class="card-body">
                        <i class="fas fa-chart-line"></i>
                        <h5>Real-time Analytics</h5>
                        <p>Get insights into your inventory performance with detailed reports and analytics</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (!user) { %>
    <div class="cta-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card cta-card text-center">
                        <div class="card-body">
                            <h3>Ready to get started?</h3>
                            <p class="lead">Login to access your inventory dashboard and start managing efficiently</p>
                            <a href="/login" class="btn btn-cta">
                                <i class="fas fa-sign-in-alt me-2"></i>Login Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>
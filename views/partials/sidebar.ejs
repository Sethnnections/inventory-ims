<div class="sidebar bg-dark text-white" style="width: 250px; min-height: 100vh;">
    <div class="sidebar-header p-3 border-bottom">
        <h5 class="mb-0">
            <i class="fas fa-boxes me-2"></i>
            Inventory System
        </h5>
    </div>
    
    <div class="sidebar-content p-3">
        <!-- Dashboard - All Users -->
        <div class="mb-3">
            <a href="/dashboard" class="btn btn-outline-light w-100 text-start mb-2">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
        </div>

        <!-- Admin Only Links -->
        <% if (user.role === 'admin') { %>
            <div class="mb-3">
                <h6 class="text-muted small mb-2">ADMINISTRATION</h6>
                <a href="/admin/users" class="btn btn-outline-light w-100 text-start mb-2">
                    <i class="fas fa-users me-2"></i>User Management
                </a>
            </div>
        <% } %>

        <!-- Manager & Admin Links -->
        <% if (user.role === 'manager' || user.role === 'admin') { %>
            <div class="mb-3">
                <h6 class="text-muted small mb-2">INVENTORY</h6>
                <a href="/manager/inventory" class="btn btn-outline-light w-100 text-start mb-2">
                    <i class="fas fa-warehouse me-2"></i>Inventory Management
                </a>
            </div>
        <% } %>

        <!-- Staff Links (All Users) -->
        <div class="mb-3">
            <h6 class="text-muted small mb-2">PRODUCTS</h6>
            <a href="/staff/products" class="btn btn-outline-light w-100 text-start mb-2">
                <i class="fas fa-box me-2"></i>View Products
            </a>
        </div>

        <!-- Profile - All Users -->
        <div class="mb-3">
            <h6 class="text-muted small mb-2">ACCOUNT</h6>
            <a href="/profile" class="btn btn-outline-light w-100 text-start mb-2">
                <i class="fas fa-user me-2"></i>My Profile
            </a>
        </div>

        <!-- Logout -->
        <div class="mt-4 pt-3 border-top">
            <form action="/api/auth/logout" method="POST" class="d-grid">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </button>
            </form>
        </div>
    </div>
</div>